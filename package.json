{
  "name": "mrowl-dungeon",
  "version": "1.0.0",
  "description": "Mr Owl's Dungeon Adventure - Learn Polish while exploring!",
  "main": "index.js",
  "scripts": {
    "build": "esbuild js/lib/maze-bundle.js --bundle --outfile=js/lib/maze.js --format=iife --global-name=MazeGenerator",
    "test": "node tests/run-tests.js",
    "start": "open index.html",
    "web:build": "rm -rf www && mkdir -p www && cp -r index.html css js assets www/",
    "android:sync": "npm run web:build && npx cap sync android",
    "android:open": "npx cap open android",
    "android:run": "npm run web:build && npx cap run android",
    "ios:sync": "npm run web:build && npx cap sync ios",
    "ios:open": "npx cap open ios",
    "ios:run": "npm run web:build && npx cap run ios",
    "test:e2e": "maestro test .maestro/flows/",
    "test:e2e:android": "maestro test .maestro/flows/",
    "test:e2e:ios": "maestro test .maestro/flows/ --platform ios",
    "test:e2e:record": "maestro record .maestro/flows/03-complete-game-automated.yaml"
  },
  "keywords": [
    "game",
    "education",
    "polish",
    "language-learning"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@capacitor-community/text-to-speech": "^6.1.0",
    "@capacitor/android": "^8.0.1",
    "@capacitor/cli": "^8.0.1",
    "@capacitor/core": "^8.0.1",
    "@capacitor/haptics": "^8.0.0",
    "@capacitor/ios": "^8.0.1",
    "@capacitor/preferences": "^8.0.0",
    "generate-maze": "^1.1.0"
  },
  "devDependencies": {
    "esbuild": "^0.27.2"
  }
}
